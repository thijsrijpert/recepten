<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/recyclerview_listitem_recipe_linearlayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp"
    android:background="@drawable/listitem">

    <TextView
        android:id="@+id/recyclerview_listitem_review_textview_title"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:gravity="center_vertical"
        android:paddingHorizontal="12dp"
        android:text="TextView"
        android:textSize="15sp"
        android:textColor="@color/colorText"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/recyclerview_listitem_review_textview_rating"
        android:layout_width="0dp"
        android:layout_height="40dp"

        android:gravity="center_vertical"
        android:paddingHorizontal="12dp"
        android:text="TextView"
        android:textSize="12sp"
        android:textColor="@color/colorText"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/recyclerview_listitem_review_textview_title"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/recyclerview_listitem_review_textview_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:paddingHorizontal="12dp"
        android:paddingVertical="5dp"
        android:text="TextView"
        android:textColor="@color/colorText"
        android:textSize="12sp"
        app:layout_constraintTop_toBottomOf="@id/recyclerview_listitem_review_textview_title" />

    <TextView
        android:id="@+id/recyclerview_listitem_review_textview_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:paddingHorizontal="12dp"
        android:paddingVertical="5dp"
        android:text="TextView"
        android:textColor="@color/colorText"
        android:textSize="12sp"
        android:textStyle="italic"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/recyclerview_listitem_review_textview_description" />

    <TextView
        android:id="@+id/recyclerview_listitem_review_textview_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:paddingHorizontal="12dp"
        android:paddingVertical="5dp"
        android:text="TextView"
        android:textColor="@color/colorText"
        android:textSize="12sp"
        android:textStyle="italic"
        app:layout_constraintStart_toEndOf="@id/recyclerview_listitem_review_textview_username"
        app:layout_constraintTop_toTopOf="@id/recyclerview_listitem_review_textview_username" />

</androidx.constraintlayout.widget.ConstraintLayout>