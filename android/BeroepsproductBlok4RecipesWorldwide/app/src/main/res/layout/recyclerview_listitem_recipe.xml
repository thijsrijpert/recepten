<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:orientation="vertical"
    android:background="@drawable/listitem"
    android:id="@+id/general_recyclerViewListItemParentLayout">

    <TextView
        android:id="@+id/recyclerview_listitem_recipe_textview_title"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center_vertical"
        android:paddingHorizontal="12dp"
        android:text="TextView"
        android:textSize="15sp"
        android:textColor="#404041" />

    <TextView
        android:id="@+id/recyclerview_listitem_recipe_textview_subtext"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center_vertical"
        android:paddingHorizontal="12dp"
        android:text="TextView"
        android:textSize="12sp"
        android:textColor="#404041" />

</LinearLayout>